<zk xmlns:h="native">
    <div class="center tc mb4">
        <h:p class="f3 fw1 pb1 tracked-tight"></h:p>

        <div class="slider-container">
            <div class="">Input Layer Height

                <h:input
                        type="number"
                        id="inputLayerHeight"
                        placeholder="Enter Input Layer Height"
                        min="0"
                />
            </div>
            <h:br/>
            <div class="">Hidden Layer Count
                <h:input
                        type="number"
                        id="hiddenLayerCount"
                        placeholder="Enter Hidden Layer Height"
                        min="0"
                />
            </div>
            <h:br/>
            <h:div class="">Output Layer Height
                <h:input
                        type="number"
                        id="outputLayerHeight"
                        placeholder="Enter Hidden Layer Height"
                        min="0"
                />
            </h:div>
            <h:br/>
            <h:button onClick="updateAndDraw()">Display</h:button>
        </div>

        <h:div class="" id="neuralNet"/>
    </div>
</zk>